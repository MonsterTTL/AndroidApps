<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickSwitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySeekBar" >
        <item name="android:maxHeight">48dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:indeterminateDrawable">?android:attr/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:thumb">@drawable/baseline_album_24</item>

    </style>

    <style name="MySeekBar2" >
        <item name="android:maxHeight">48dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:indeterminateDrawable">?android:attr/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar2_progress_drawable</item>
        <item name="android:thumb">@drawable/baseline_album_24</item>

    </style>
</resources>